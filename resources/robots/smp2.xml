<robot>
  <robotName>SMP 2</robotName>
  <system>UGV</system>
  <driveSystem>Differential Drive</driveSystem>
  <imageFile>smp.jpg</imageFile>
  <nameSpace>smp2</nameSpace>

  <sensors>
    <camera>
      <name>Color Video</name>
      <topicName>rgb/image_color</topicName>
    </camera>
    <camera>
      <name>Greyscale Video</name>
      <topicName>rgb/image_mono</topicName>
    </camera>
    <camera>
      <name>Depth Image</name>
      <topicName>depth/image_raw</topicName>
    </camera>
    <laser>
      <name>LiDAR Scan</name>
      <topicName>scan</topicName>
    </laser>
  </sensors>

  <controls>
    <drive>
      <topicName>cmd_vel</topicName>
    </drive>
  </controls>
</robot>
